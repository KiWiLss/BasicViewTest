<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简单的跑马灯效果"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffcccc"
            android:text="苹果公司今天在纽约股市收盘后发布了2016财年第三财季的财报，营收和利润不出意外的下滑，不过因为总营收和每股收益超过了市场预期，苹果股票在目前的盘后交易中上涨了7.21%，重回100美元以上"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:textStyle="italic|bold"
            android:singleLine="true"
            android:elevation="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="苹果公司今天在纽约股市收盘后发布了2016财年第三财季的财报苹果公司今天在纽约股市收盘后发布了2016财年第三财季的财报苹果公司今天在纽约股市收盘后发布了2016财年第三财季的财报"
            android:lineSpacingMultiplier="2"/>

        <TextView
            android:id="@+id/tv_text_simple_fore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变部分文字的前景色"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tv_text_simple_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变部分文字的大小"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>